{
    "name": "boxes",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:sass": "sass --watch . --no-source-map",
        "dev:css-to-ts": "node ./scripts/css-to-ts.js ./src --watch",
        "dev:storybook": "storybook dev -p 6006",
        "dev": "run-p dev:*",
        "stylelint": "stylelint \"**/*.scss\"",
        "eslint": "eslint \"src/**/*.ts\"",
        "lint": "run-p stylelint prettier eslint",
        "build:sass": "sass . --no-source-map",
        "build:css-to-ts": "node ./scripts/css-to-ts.js",
        "build": "build:sass && build:css-to-ts ./src && tsc && vite build",
        "build:storybook": "storybook build"
    },
    "dependencies": {
        "lit": "^3.1.4"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "1.6.1",
        "@eslint/js": "^9.8.0",
        "@storybook/addon-essentials": "^8.2.6",
        "@storybook/addon-links": "^8.2.6",
        "@storybook/blocks": "^8.2.6",
        "@storybook/test": "^8.2.6",
        "@storybook/web-components": "^8.2.6",
        "@storybook/web-components-vite": "^8.2.6",
        "@types/eslint__js": "^8.42.3",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-lit": "^1.14.0",
        "eslint-plugin-prettier": "^5.2.1",
        "node-watch": "^0.7.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.3",
        "prettier-plugin-sort-imports": "^1.8.6",
        "sass": "^1.77.8",
        "storybook": "^8.2.6",
        "stylelint": "^16.7.0",
        "stylelint-config-clean-order": "^6.1.0",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-prettier": "^5.0.2",
        "typescript": "^5.2.2",
        "typescript-eslint": "^7.17.0",
        "vite": "^5.3.4"
    }
}
